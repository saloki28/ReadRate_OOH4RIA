<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="ReadRate_e4Gen.Infraestructure"
		                   namespace="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4">
		    
		    
			
				<class name="NoticiaNH" table="Noticia"> 
				  	
						<id name="Id" column="idNoticia" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Titulo" type="string"> 
						<column name="titulo"  not-null="true"/>
					</property>
					<property name="FechaPublicacion" type="date"> 
						<column name="fechaPublicacion"  not-null="true"/>
					</property>
					<property name="Foto" type="string"> 
						<column name="foto"  not-null="true"/>
					</property>
					<property name="TextoContenido" type="string"> 
						<column name="textoContenido"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
		  			
						<many-to-one name="AdministradorNoticias" class="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4.AdministradorNH" >	
								<column name="FK_idAdministrador_idAdministrador"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="NotificacionNoticia" >
							<key>
							
								
								<column name="FK_idNoticia_idNoticiaNotificada"/>
					      	</key>
							<one-to-many class="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4.NotificacionNH"/>
					    </bag>
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="NoticiaNHReadAllHQL">from NoticiaNH</query>
		  <query name="NoticiaNHdameTodosTitulosNoticiasHQL"><![CDATA[select noticia.Titulo FROM NoticiaNH noticia order by noticia.Titulo]]></query>
		  <query name="NoticiaNHdameNoticiasPorTituloHQL"><![CDATA[FROM NoticiaNH noticia where lower(:p_titulo) like concat ('%', lower(noticia.Titulo), '%')]]></query>
		</hibernate-mapping>
	