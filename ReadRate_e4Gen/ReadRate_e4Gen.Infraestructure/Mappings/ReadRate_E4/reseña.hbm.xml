<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="ReadRate_e4Gen.Infraestructure"
		                   namespace="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4">
		    
		    
			
				<class name="ReseñaNH" table="Reseña"> 
				  	
						<id name="Id" column="idReseña" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="TextoOpinion" type="string"> 
						<column name="textoOpinion"  not-null="true"/>
					</property>
					<property name="Valoracion" type="float"> 
						<column name="valoracion"  not-null="true"/>
					</property>
					<property name="Fecha" type="date"> 
						<column name="fecha"  not-null="true"/>
					</property>
			
			
			
			
			
		  			
						<many-to-one name="LectorValorador" class="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4.LectorNH" >	
								<column name="FK_idUsuario_idLector"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="LibroReseñado" class="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4.LibroNH" >	
								<column name="FK_idLibro_idLibro"/> 
						</many-to-one>
											 					
			
		  			
						<bag name="NotificacionReseña" >
							<key>
							
								
								<column name="FK_idReseña_idReseña"/>
					      	</key>
							<one-to-many class="ReadRate_e4Gen.Infraestructure.EN.ReadRate_E4.NotificacionNH"/>
					    </bag>
					
			
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="ReseñaNHReadAllHQL">from ReseñaNH</query>
		  <query name="ReseñaNHdameReseñasOrdenadasPorValoracionDescHQL"><![CDATA[FROM ReseñaNH reseña order by reseña.Valoracion desc]]></query>
		  <query name="ReseñaNHdameReseñasOrdenadasPorValoracionAscHQL"><![CDATA[FROM ReseñaNH reseña order by reseña.Valoracion asc]]></query>
		</hibernate-mapping>
	