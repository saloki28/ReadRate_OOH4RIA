@model WebApplication_ReadRate.Models.AdministradorViewModel

@{
    ViewData["Title"] = "Detalles del administrador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles del administrador</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 50%, #ffa726 100%);
            color: #fff;
            padding: 2.5rem 0 2rem 0;
            text-align: center;
            box-shadow: 0 4px 20px rgba(255, 111, 0, 0.3);
            margin-bottom: 3rem;
        }

            .page-header h1 {
                font-size: 2.5rem;
                margin: 0;
                letter-spacing: 2px;
                font-weight: 700;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            }

        .container {
            max-width: 800px;
            margin: 3rem auto;
            padding: 0 2rem;
        }

        .details-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(255,111,0,0.1);
            padding: 2.5rem;
        }

        .detail-row {
            display: flex;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid #ffe0b2;
        }

            .detail-row:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .detail-label {
            flex: 0 0 200px;
            color: #e65100;
            font-weight: 600;
            font-size: 1rem;
        }

        .detail-value {
            flex: 1;
            color: #333;
            font-size: 1rem;
            line-height: 1.6;
        }

            .detail-value.synopsis {
                white-space: pre-wrap;
            }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: space-between;
        }

        .btn {
            padding: 0.8rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 100%);
            color: #fff;
            box-shadow: 0 4px 12px rgba(255,111,0,0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #e65100 0%, #f57c00 100%);
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(255,111,0,0.4);
            }

        .btn-secondary {
            background: #fff;
            color: #ff9800;
            border: 2px solid #ff9800;
        }

            .btn-secondary:hover {
                background: #ff9800;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="page-header">
        <h1>Detalles del administrador</h1>
    </div>

    <div class="container">
        <div class="details-card">
            <div class="detail-row">
                <div class="detail-label">Foto</div>
                <div class="detail-value">
                    @if(!string.IsNullOrEmpty(Model.FotoUrl))
                    {
                        <img src="@Model.FotoUrl" alt="Foto de @Model.Nombre" style="max-width: 300px; max-height: auto; border-radius: 15px; border: 3px solid #ff9800; box-shadow: 0 4px 12px rgba(255,111,0,0.2);">
                    }
                    else
                    {
                        <span style="color: #999;">Foto Admin</span>
                    }
                </div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Nombre)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Nombre)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="detail-value"><a href="mailto:@Model.Email">@Model.Email</a></div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar administador</a>
            </div>
        </div>
    </div>
</body>
</html>