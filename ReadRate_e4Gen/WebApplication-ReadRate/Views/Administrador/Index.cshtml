@model IEnumerable<WebApplication_ReadRate.Models.AdministradorViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <h1>Listado de Administradores</h1>
</div>

<div class="container">
    <div class="action-bar">
        <h2 class="section-title">Todas los clubs de lectura </h2>
        <a asp-action="Create" class="btn-create">+ Crear nuevo administrador</a>
    </div>

    <div class="books-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="book-card">
                    <div class="book-cover">
                        @if(!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" alt="Foto de @item.Nombre" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <span>Foto Admin</span>
                        }
                    </div>
                    <div class="book-info">
                        <div class="book-title">@Html.DisplayFor(modelItem => item.Nombre)</div>
                        <div class="book-author"><a href="mailto:@item.Email">@Html.DisplayFor(modelItem => item.Email)</a></div>
                        <div class="book-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Borrar</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-books">
                No hay administradores en el listado. ¡Añade el primero!
            </div>
        }
    </div>
</div>
