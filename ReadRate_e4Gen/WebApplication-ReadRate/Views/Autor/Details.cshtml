@model WebApplication_ReadRate.Models.AutorViewModel

@{
    ViewData["Title"] = "Detalles del Autor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles del Autor</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <div class="page-header">
        <h1>Detalles del Autor</h1>
    </div>

    <div class="container">
        <div class="details-card">

            @if(Model != null && !string.IsNullOrEmpty(Model.FotoUrl))
            {
                    <div class="detail-label">Foto</div>
                    <div class="detail-row-foto" style="display: flex; justify-content: center; align-items: center; margin-bottom: 2.5rem;">
                        <img src="@Model.FotoUrl" alt="Foto del autor" style="max-width: 250px; max-height: auto; border-radius: 15px; border: 3px solid #ff9800; box-shadow: 0 4px 12px rgba(255,111,0,0.2);">
                    </div>
            }

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Email)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.NombreUsuario)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.NombreUsuario)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.FechaNacimiento)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.FechaNacimiento)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.CiudadResidencia)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.CiudadResidencia)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.PaisResidencia)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.PaisResidencia)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Rol) de Usuario</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Rol)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.ValoracionMedia)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.ValoracionMedia) / 5</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.NumeroSeguidores)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.NumeroSeguidores)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.CantidadLibrosPublicados)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.CantidadLibrosPublicados)</div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-primary">Editar Autor</a>
            </div>
        </div>
    </div>
</body>
</html>
