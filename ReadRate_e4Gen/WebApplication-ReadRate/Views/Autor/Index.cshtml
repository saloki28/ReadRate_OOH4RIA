@model IEnumerable<WebApplication_ReadRate.Models.AutorViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="page-header">
    <h1>Listado de Autores</h1>
</div>


<div class="container">
    <div class="action-bar">
        <h2 class="section-title">Todos los Autores</h2>
        <a asp-action="Create" class="btn-create">+ Crear nuevo autor</a>
    </div>

    <div class="books-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="book-card">
                    <div class="book-cover">
                        @if(!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" alt="Foto de @item.NombreUsuario" style="width: 100%; height: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <span>FotoLibro</span>
                        }
                    </div>
                    <div class="book-info">
                        <div class="book-title">@Html.DisplayFor(modelItem => item.NombreUsuario)</div>
                        <div class="book-author">@Html.DisplayFor(modelItem => item.Email)</div>
                        <div class="book-meta">
                            <div class="book-meta-item">
                                <strong>Fecha de nacimiento:</strong> @Html.DisplayFor(modelItem => item.FechaNacimiento)
                            </div>
                            <div class="book-meta-item">
                                <strong>Ciudad de residencia:</strong> @Html.DisplayFor(modelItem => item.CiudadResidencia)
                            </div>
                            <div class="book-meta-item">
                                <strong>Pais de residencia:</strong> @Html.DisplayFor(modelItem => item.PaisResidencia)
                            </div>
                            <div class="book-meta-item">
                                <strong>Cantidad de libros publicados:</strong> @Html.DisplayFor(modelItem => item.CantidadLibrosPublicados)
                            </div>
                            <div class="book-meta-item">
                                <strong>Cantidad de seguidores:</strong> @Html.DisplayFor(modelItem => item.NumeroSeguidores)
                            </div>
                            <div class="book-meta-item">
                                <strong>Valoración media:</strong> @Html.DisplayFor(modelItem => item.ValoracionMedia) / 5
                            </div>
                        </div>
                        <div class="book-actions">
                            <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn-action">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn-action edit">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn-action delete">Borrar</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-books">
                No hay autores en el listado. ¡Añade el primero!
            </div>
        }
    </div>
</div>