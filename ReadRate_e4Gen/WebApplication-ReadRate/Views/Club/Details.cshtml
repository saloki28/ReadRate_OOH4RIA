@model WebApplication_ReadRate.Models.ClubViewModel

@{
    ViewData["Title"] = "Detalles del club de lectura";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles del club de lectura</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <div class="page-header">
        <h1>Detalles del club de lectura</h1>
    </div>

    <div class="container">
        <div class="details-card">
            @if(Model != null && !string.IsNullOrEmpty(Model.FotoUrl))
            {
                <div class="detail-label">Foto</div>
                <div class="detail-row-foto" style="display: flex; justify-content: center; align-items: center; margin-bottom: 2.5rem;">
                    <img src="@Model.FotoUrl" alt="Foto del club" style="max-width: 300px; max-height: auto; border-radius: 15px; border: 3px solid #ff9800; box-shadow: 0 4px 12px rgba(255,111,0,0.2);">
                </div>
            }

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Nombre)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Nombre)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Descripcion)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Descripcion)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.PropietarioNombre)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.PropietarioNombre)</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.NumeroMax)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.NumeroMax) Lectores</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Miembros)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Miembros) Lectores</div>
            </div>

            <div class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Enlace)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Enlace)</div>
            </div>

            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar Club</a>
            </div>
        </div>
    </div>
</body>
</html>