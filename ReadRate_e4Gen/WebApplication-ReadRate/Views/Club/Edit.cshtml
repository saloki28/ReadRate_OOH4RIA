@model WebApplication_ReadRate.Models.ClubViewModel

@{
    ViewData["Title"] = "Editar club";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Editar Club de lectura</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Editar Club</h1>
    </header>

    <main class="container">
        <section class="form-card">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FotoUrl" />

                <article class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" maxlength="200" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                    <small class="form-hint">Escribe el nombre del club (máximo 200 caracteres)</small>
                </article>

                <article class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" maxlength="600" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                    <small class="form-hint">Describe el propósito del club de lectura (máximo 600 caracteres)</small>
                </article>

                <article class="form-group">
                    <label asp-for="NumeroMax" class="control-label"></label>
                    <input asp-for="NumeroMax" class="form-control" type="number" min="0" max="1000" step="1" />
                    <span asp-validation-for="NumeroMax" class="text-danger"></span>
                    <small class="form-hint">Indica el número máximo de aforo del club de lectura</small>
                </article>

                <article class="form-group">
                    <label asp-for="Miembros" class="control-label"></label>
                    <input asp-for="Miembros" class="form-control" type="number" min="0" max="1000" step="1" />
                    <span asp-validation-for="Miembros" class="text-danger"></span>
                    <small class="form-hint">Indica el número máximo de aforo del club de lectura (máximo 1000)</small>
                </article>

                <article class="form-group">
                    <label asp-for="Enlace" class="control-label"></label>
                    <input asp-for="Enlace" class="form-control" maxlength="200" />
                    <span asp-validation-for="Enlace" class="text-danger"></span>
                    <small class="form-hint">Escribe el enlace de discord del club (máximo 200 caracteres)</small>
                </article>

                <article class="form-group">
                    <label asp-for="FotoFile" class="control-label">Nueva foto del club</label>
                    <input asp-for="FotoFile" type="file" class="form-control" />
                    <span asp-validation-for="FotoFile" class="text-danger"></span>
                    <small class="form-hint">Si deseas cambiar la foto, sube una nueva imagen</small>
                </article>

                <article class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                </article>
            </form>
        </section>
    </main>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
