@model IEnumerable<WebApplication_ReadRate.Models.EventoViewModel>

@{
    ViewData["Title"] = "Index Eventos";
}
<header class="page-header">
    <h1>Listado de Eventos</h1>
</header>

<section class="container">
    <div class="action-bar">
        <h2 class="section-title">Todos los Eventos</h2>
        <a asp-action="Create" class="btn-create">+ Crear nuevo evento</a>
    </div>

    <div class="events-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <article class="event-card">
                    <div class="book-cover">
                        @if (!string.IsNullOrEmpty(item.Foto))
                        {
                            <img src="@item.Foto" alt="@item.Nombre" class="event-cover" />
                        }
                        else
                        {
                            <div class="event-cover-placeholder">
                                Foto Evento
                            </div>
                        }
                    </div>

                    <div class="event-info">
                        <div class="book-title">@Html.DisplayFor(modelItem => item.Nombre)</div>

                        <div class="book-meta">
                            <div class="book-meta-item">
                                <strong>Ubicación:</strong> @Html.DisplayFor(modelItem => item.Ubicacion)
                            </div>
                            <div class="book-meta-item">
                                <strong>Fecha:</strong> @Html.DisplayFor(modelItem => item.FechaPublicacion)
                            </div>
                            <div class="book-meta-item">
                                <strong>Hora:</strong> @item.HoraEvento.ToString("HH:mm")
                            </div>
                            <div class="book-meta-item">
                                <strong>Organizador:</strong> @Html.DisplayFor(modelItem => item.AdminNombre)
                            </div>
                            <div class="book-meta-item">
                                <strong>Aforo:</strong> @Html.DisplayFor(modelItem => item.AforoActual) / @Html.DisplayFor(modelItem => item.AforoMaximo) Personas
                            </div>
                            <div class="book-meta-item">
                                <strong>Descripción:</strong> @Html.DisplayFor(modelItem => item.TextoDescripcion)
                            </div>
                        </div>

                        <div class="event-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Borrar</a>
                        </div>
                    </div>
                </article>
            }
        }
        else
        {
            <div class="no-events">
                No hay eventos disponibles.
            </div>
        }
    </div>
</section>