@model IEnumerable<ReadRate_e4Gen.ApplicationCore.EN.ReadRate_E4.LibroEN>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Inicio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
</head>
<body>
    <header class="header">
        <h1>Read&Rate</h1>
        <p>Descubre los últimos libros publicados y comparte tu opinión</p>
    </header>
    <main class="container">
        <section>
            <h2 class="section-title">Últimos 5 libros publicados</h2>
            <div class="books-grid">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <article class="book-card">
                        <div class="book-cover">
                            @if(!string.IsNullOrEmpty(item.FotoPortada))
                            {
                                <img src="@item.FotoPortada" alt="Portada de @item.Titulo" style="width: 110%; height: 110%; object-fit: contain;">
                            }
                            else
                            {
                                <span>FotoPortada</span>
                            }
                        </div>
                        <div class="book-info">
                            <div class="book-title">@Html.DisplayFor(modelItem => item.Titulo)</div>
                            <div class="book-author">@Html.DisplayFor(modelItem => item.AutorPublicador.NombreUsuario)</div>
                            <div class="book-meta">
                                <strong>Género:</strong> @Html.DisplayFor(modelItem => item.Genero) <br />
                                <strong>Edad:</strong> +@Html.DisplayFor(modelItem => item.EdadRecomendada) años <br/>
                                <strong>Páginas:</strong> @Html.DisplayFor(modelItem => item.NumPags) <br/>
                                <strong>Valoración Media:</strong> @Html.DisplayFor(modelItem => item.ValoracionMedia) / 5 <br/>
                                <strong>Publicación:</strong> @item.FechaPublicacion?.ToString("dd/MM/yyyy")
                            </div>
                            <div class="book-meta">@Html.DisplayFor(modelItem => item.Sinopsis)</div>
                            <div class="book-actions">
                                <a class="btn-action" asp-controller="Libro" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            </div>
                        </div>
                    </article>
                }
            }
            else
            {
                <div class="no-books">
                    Aún no existen libros publicados.
                </div>
            }
        </div>
        </section>
    </main>
</body>
</html>
