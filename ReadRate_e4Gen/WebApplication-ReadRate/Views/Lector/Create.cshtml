@model WebApplication_ReadRate.Models.LectorViewModel

@{
    ViewData["Title"] = "Crear Lector";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Crear Lector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <div class="page-header">
        <h1>Crear Nuevo Lector</h1>
    </div>

    <div class="container">
        <div class="form-card">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                @* Campo oculto para el rol - siempre será "lector" (valor 2) *@
                <input type="hidden" asp-for="Rol" value="2" />

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Ej: lector@gmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <small class="form-hint">Formato correo electrónico</small>
                </div>

                <div class="form-group">
                    <label asp-for="NombreUsuario" class="control-label"></label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ej: Juan123" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    <small class="form-hint">Nombre de usuario de no más de 255 caracteres</small>
                </div>

                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    <small class="form-hint">Fecha en formato dd/mm/yyyy</small>
                </div>

                <div class="form-group">
                    <label asp-for="CiudadResidencia" class="control-label"></label>
                    <input asp-for="CiudadResidencia" class="form-control" placeholder="Elche, Alicante..."/>
                    <span asp-validation-for="CiudadResidencia" class="text-danger"></span>
                    <small class="form-hint">Texto de máximo 255 caracteres</small>
                </div>

                <div class="form-group">
                    <label asp-for="PaisResidencia" class="control-label"></label>
                    <input asp-for="PaisResidencia" class="form-control" placeholder="España, Portugal..." />
                    <span asp-validation-for="PaisResidencia" class="text-danger"></span>
                    <small class="form-hint">Texto de máximo 255 caracteres</small>
                </div>

                <div class="form-group">
                    <label asp-for="Pass" class="control-label"></label>
                    <input asp-for="Pass" class="form-control" placeholder="Ej: password123"/>
                    <span asp-validation-for="Pass" class="text-danger"></span>
                    <small class="form-hint">Contraseña de acceso</small>
                </div>

                <div class="form-group">
                    <label asp-for="FotoFile" class="control-label">Foto del lector</label>
                    <input asp-for="FotoFile" type="file" class="form-control" />
                    <span asp-validation-for="FotoFile" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Crear lector" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}