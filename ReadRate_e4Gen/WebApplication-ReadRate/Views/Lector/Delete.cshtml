@model WebApplication_ReadRate.Models.LectorViewModel

@{
    ViewData["Title"] = "Eliminar Lector";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Eliminar Lector</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
            min-height: 100vh;
            @* display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem; *@
        }

        main, .container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            margin: 3rem auto;
        }

        .confirmation-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(255,111,0,0.15);
            padding: 2.5rem;
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

        .warning-icon {
            font-size: 4rem;
            color: #ff6f00;
            margin-bottom: 1rem;
        }

        .confirmation-title {
            color: #e65100;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .confirmation-message {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            line-height: 1.6;
        }

        .book-title {
            color: #ff9800;
            font-weight: 600;
            font-size: 1.3rem;
            margin: 1.5rem 0;
            padding: 1rem;
            background: #fff3e0;
            border-radius: 10px;
            border-left: 4px solid #ff9800;
        }

        .warning-text {
            color: #f44336;
            font-size: 0.9rem;
            margin: 1.5rem 0;
            font-weight: 500;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: center;
        }

        .btn {
            padding: 0.8rem 2.5rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-danger {
            background: linear-gradient(135deg, #f44336 0%, #e53935 100%);
            color: #fff;
            box-shadow: 0 4px 12px rgba(244,67,54,0.3);
        }

            .btn-danger:hover {
                background: linear-gradient(135deg, #d32f2f 0%, #c62828 100%);
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(244,67,54,0.4);
            }

        .btn-secondary {
            background: #fff;
            color: #ff9800;
            border: 2px solid #ff9800;
        }

            .btn-secondary:hover {
                background: #ff9800;
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="confirmation-card">
        <div class="warning-icon">¡AVISO!</div>
        <h2 class="confirmation-title">¿Eliminar lector?</h2>
        <p class="confirmation-message">¿Seguro que quieres borrar el siguiente lector?</p>
        <div class="book-title">"@Model.NombreUsuario"</div>
        <p class="warning-text">Esta acción no se puede deshacer</p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">No, volver</a>
                <button type="submit" class="btn btn-danger">Sí, eliminar</button>
            </div>
        </form>
    </div>
</body>
</html>
