<div class="container">
    @if (Model != null)
    {
        <div style="display: flex; gap: 2rem; align-items: flex-start; background: #fff; padding: 2rem; border-radius: 20px; box-shadow: 0 8px 24px rgba(255,111,0,0.1); margin-bottom: 3rem;">
            <div class="book-cover" style="width: 250px; height: 250px; flex-shrink: 0;">
                @if (!string.IsNullOrEmpty(Model.FotoUrl))
                {
                    <img src="@Model.FotoUrl" alt="Foto de @Model.NombreUsuario" style="width: 100%; height: 100%; object-fit: cover; border-radius: 15px;">
                }
                else
                {
                    <span>FotoLector</span>
                }
            </div>
            <div style="flex: 1;">
                <div class="book-title" style="font-size: 2rem; margin-bottom: 0.5rem;">@Html.DisplayFor(model => model.NombreUsuario)</div>
                <div class="book-author" style="font-size: 1.1rem; margin-bottom: 1.5rem;">@Html.DisplayFor(model => model.Email)</div>
                <div class="book-meta" style="font-size: 1rem;">
                    <div class="book-meta-item">
                        <strong>Fecha de nacimiento:</strong> @Html.DisplayFor(model => model.FechaNacimiento)
                    </div>
                    <div class="book-meta-item">
                        <strong>Ciudad de residencia:</strong> @Html.DisplayFor(model => model.CiudadResidencia)
                    </div>
                    <div class="book-meta-item">
                        <strong>Pais de residencia:</strong> @Html.DisplayFor(model => model.PaisResidencia)
                    </div>
                    <div class="book-meta-item">
                        <strong>Cantidad de libros en curso:</strong> @Html.DisplayFor(model => model.CantLibrosCurso)
                    </div>
                    <div class="book-meta-item">
                        <strong>Cantidad de libros leídos:</strong> @Html.DisplayFor(model => model.CantLibrosLeidos)
                    </div>
                    <div class="book-meta-item">
                        <strong>Cantidad de autores seguidos:</strong> @Html.DisplayFor(model => model.CantAutoresSeguidos)
                    </div>
                    <div class="book-meta-item">
                        <strong>Cantidad de clubes suscritos:</strong> @Html.DisplayFor(model => model.CantClubsSuscritos)
                    </div>
                </div>
                <div class="book-actions" style="margin-top: 1.5rem;">
                    <a asp-action="Details" asp-route-id="@Model.IdUsuario" class="btn-action">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn-action edit">Editar</a>
                    <a asp-action="Delete" asp-route-id="@Model.IdUsuario" class="btn-action delete">Borrar</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="no-books">
            No se encontró información del lector.
        </div>
    }
    
    <!-- Sección de Lecturas en curso -->
    <hr class="separador">
    <div class="action-bar" style="margin-bottom: 1.5rem;">
        <h2 class="section-title">LECTURAS EN CURSO</h2>
    </div>
    @if (Model != null && Model.LecturasGuardadas != null && Model.LecturasGuardadas.Any())
    {
        <div style="margin-top: 3rem;">
            
            <div class="books-grid">
                @foreach (var lectura in Model.LecturasGuardadas)
                {
                    <div class="book-card">
                        <div class="book-cover">
                            @if(!string.IsNullOrEmpty(lectura.FotoPortadaUrl))
                            {
                                <img src="@lectura.FotoPortadaUrl" alt="Portada de @lectura.Titulo" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <span>Portada</span>
                            }
                        </div>
                        <div class="book-info">
                            <div class="book-title">@lectura.Titulo</div>
                            <div class="book-author">@lectura.NombreAutor</div>
                            <div class="book-meta">
                                <strong>Género:</strong> @lectura.Genero <br />
                                <strong>Páginas:</strong> @lectura.NumPags <br/>
                                <strong>Valoración:</strong> @lectura.ValoracionMedia / 5
                            </div>
                            <div class="book-sinopsis">@lectura.Sinopsis</div>
                            <div class="book-actions">
                                <a class="btn-action" asp-controller="Libro" asp-action="Details" asp-route-id="@lectura.Id">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Sección de Libros Guardados -->
