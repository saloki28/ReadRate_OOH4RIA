                                <strong>Descripción:</strong> @club.Descripcion
                            </div>
                            <div class="book-actions">
                                <a class="btn-action" asp-controller="Club" asp-action="Details" asp-route-id="@club.Id">Ver Detalles</a>
                                @if(!string.IsNullOrEmpty(club.Enlace))
                                {
                                    <a class="btn-action" href="@club.Enlace" target="_blank">Discord</a>
                                }
                            </div>
                        </div> *@
                    </div>
                }
            </div>
        </div>
    }
</div>
