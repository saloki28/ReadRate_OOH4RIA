        <h2 class="section-title">CLUBES DE LECTURA SUSCRITOS</h2>
    </div>
    @if (Model != null && Model.ClubsInscritos != null && Model.ClubsInscritos.Any())
    {
        <div style="margin-top: 3rem;">
            
            <div class="books-grid">
                @foreach (var club in Model.ClubsInscritos)
                {
                    <div class="book-card">
                        <div class="book-cover">
                            @if(!string.IsNullOrEmpty(club.FotoUrl))
                            {
                                <img src="@club.FotoUrl" alt="Foto de @club.Nombre" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <span>Foto del club</span>
                            }
                        </div>
