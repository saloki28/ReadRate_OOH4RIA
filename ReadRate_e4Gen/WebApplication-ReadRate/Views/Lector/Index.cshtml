                            <div class="book-actions">
                                <a class="btn-action" asp-controller="Libro" asp-action="Details" asp-route-id="@libro.Id">Ver Detalles</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Sección de Clubes Inscritos -->
