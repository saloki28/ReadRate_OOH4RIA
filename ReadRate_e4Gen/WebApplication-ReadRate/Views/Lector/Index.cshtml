        <h2 class="section-title">LECTURAS GUARDADAS</h2>
    </div>
    @if (Model != null && Model.LibrosGuardados != null && Model.LibrosGuardados.Any())
    {
        <div style="margin-top: 3rem;">
            
            <div class="books-grid">
                @foreach (var libro in Model.LibrosGuardados)
                {
                    <div class="book-card">
                        <div class="book-cover">
                            @if(!string.IsNullOrEmpty(libro.FotoPortadaUrl))
                            {
                                <img src="@libro.FotoPortadaUrl" alt="Portada de @libro.Titulo" style="width: 100%; height: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <span>Portada</span>
                            }
                        </div>
                        <div class="book-info">
                            <div class="book-title">@libro.Titulo</div>
                            <div class="book-author">@libro.NombreAutor</div>
                            <div class="book-meta">
                                <strong>Género:</strong> @libro.Genero <br />
