@model WebApplication_ReadRate.Models.LibroViewModel

@{
    ViewData["Title"] = "Detalles del Libro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles del Libro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Detalles del Libro</h1>
    </header>

    <main class="container">
        <section class="details-card">
            @if(Model != null && !string.IsNullOrEmpty(Model.FotoPortadaUrl))
            {
                <div class="detail-row-foto">
                    <img src="@Model.FotoPortadaUrl" alt="Portada del libro" style="max-width: 200px; height: auto; border-radius: 10px;">
                </div>
            }
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Titulo)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Titulo)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Genero)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Genero)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.EdadRecomendada)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.EdadRecomendada) años</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.FechaPublicacion)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.FechaPublicacion)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.NumPags)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.NumPags) páginas</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Sinopsis)</div>
                <div class="detail-value synopsis">@Html.DisplayFor(model => model.Sinopsis)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.ValoracionMedia)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.ValoracionMedia) / 5</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">Nombre del Autor/a</div>
                <div class="detail-value">@Html.DisplayFor(model => model.NombreAutor)</div>
            </article>
            
            <article class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar libro</a>
            </article>
        </section>
    </main>
</body>
</html>
