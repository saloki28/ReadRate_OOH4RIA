@model WebApplication_ReadRate.Models.NoticiaViewModel

@{
    ViewData["Title"] = "Crear Noticia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Crear Noticia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Crear Nueva Noticia</h1>
    </header>

    <main class="container">
        <section class="form-card">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <article class="form-group">
                    <label asp-for="Titulo" class="control-label">Título de la Noticia</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Introduce un titular..." />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                    <small class="form-hint">Título de no más de 255 caracteres</small>
                </article>

                <article class="form-group">
                    <label asp-for="TextoContenido" class="control-label">Contenido</label>
                    <textarea asp-for="TextoContenido" class="form-control" placeholder="Escribe el cuerpo de la noticia..."></textarea>
                    <span asp-validation-for="TextoContenido" class="text-danger"></span>
                    <small class="form-hint">Texto de máximo 255 caracteres </small>
                </article>

                <!--Codigo Select -->
                <article class="form-group">
                    <label asp-for="AdminPublicadorID" class="control-label">Nombre del Administrador</label>
                    <select class="form-control" asp-for="AdminPublicadorID" asp-items='(IEnumerable<SelectListItem>)ViewData["Administradores"]'></select>
                    <span asp-validation-for="AdminPublicadorID" class="text-danger"></span>
                </article>

                <!--FOTO-->
                <article class="form-group">
                    <label asp-for="FotoFichero" class="control-label">Imagen de Portada</label>
                    <input asp-for="FotoFichero" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="FotoFichero" class="text-danger"></span>
                </article>

                @if (ViewData["Title"].ToString().Contains("Editar"))
                {
                    <input type="hidden" asp-for="Foto" />
                    <p>Foto actual:</p>
                    <img src="@Model.Foto" style="max-width: 150px;" />
                }
                <!------------------------------------------------------------------------------------------>

                <article class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Crear noticia" class="btn btn-primary" />
                </article>
            </form>
        </section>
    </main>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}