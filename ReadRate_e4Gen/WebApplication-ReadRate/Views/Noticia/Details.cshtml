@model WebApplication_ReadRate.Models.NoticiaViewModel

@{
    ViewData["Title"] = "Detalles de la Noticia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles de la Noticia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Detalles de la Noticia</h1>
    </header>

    <main class="container">
        <section class="details-card">
            @if (!string.IsNullOrEmpty(Model.Foto))
            {
                <div class="detail-row-foto">
                    <img src="@Model.Foto" alt="Foto de la noticia" style="max-width: 300px; max-height: auto; border-radius: 15px; border: 3px solid #ff9800; box-shadow: 0 4px 12px rgba(255,111,0,0.2);">
                </div>
            }

            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Titulo)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Titulo)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.FechaPublicacion)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.FechaPublicacion)</div>
            </article>
            
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.TextoContenido)</div>
                <div class="detail-value synopsis">@Html.DisplayFor(model => model.TextoContenido)</div>
            </article>

            <article class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar noticia</a>
            </article>
        </section>
    </main>
</body>
</html>
