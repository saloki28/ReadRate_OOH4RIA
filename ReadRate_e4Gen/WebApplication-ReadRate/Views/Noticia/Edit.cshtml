@model WebApplication_ReadRate.Models.NoticiaViewModel

@{
    ViewData["Title"] = "Editar Noticia";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Editar Noticia</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 50%, #ffa726 100%);
            color: #fff;
            padding: 2.5rem 0 2rem 0;
            text-align: center;
            box-shadow: 0 4px 20px rgba(255, 111, 0, 0.3);
            margin-bottom: 3rem;
        }

            .page-header h1 {
                font-size: 2.5rem;
                margin: 0;
                letter-spacing: 2px;
                font-weight: 700;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
            }

        .container {
            max-width: 800px;
            margin: 3rem auto;
            padding: 0 2rem;
        }

        .form-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(255,111,0,0.1);
            padding: 2.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

            .form-group label {
                display: block;
                color: #e65100;
                font-weight: 600;
                margin-bottom: 0.5rem;
                font-size: 1rem;
            }

        .form-control {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 2px solid #ffe0b2;
            border-radius: 10px;
            font-size: 1rem;
            font-family: 'Poppins', sans-serif;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #ff9800;
                box-shadow: 0 0 0 3px rgba(255,152,0,0.1);
            }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .text-danger {
            color: #f44336;
            font-size: 0.85rem;
            margin-top: 0.3rem;
            display: block;
        }

        .validation-summary {
            background: #ffebee;
            border: 2px solid #f44336;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #c62828;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: space-between;
        }

        .btn {
            padding: 0.8rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 100%);
            color: #fff;
            box-shadow: 0 4px 12px rgba(255,111,0,0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #e65100 0%, #f57c00 100%);
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(255,111,0,0.4);
            }

        .btn-secondary {
            background: #fff;
            color: #ff9800;
            border: 2px solid #ff9800;
        }

            .btn-secondary:hover {
                background: #ff9800;
                color: #fff;
            }

        .form-hint {
            font-size: 0.85rem;
            color: #666;
            margin-top: 0.3rem;
        }

        .current-image {
            margin-bottom: 1rem;
            padding: 1rem;
            background: #f5f5f5;
            border-radius: 10px;
        }

        .current-image p {
            margin-bottom: 0.5rem;
            color: #666;
            font-weight: 600;
        }

        .current-image img {
            max-width: 200px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="page-header">
        <h1>Editar Noticia</h1>
    </div>

    <div class="container">
        <div class="form-card">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Foto" />

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Introduce el titular..." />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                    <small class="form-hint">Título de no más de 255 caracteres</small>
                </div>

                <div class="form-group">
                    <label asp-for="TextoContenido" class="control-label"></label>
                    <textarea asp-for="TextoContenido" class="form-control" placeholder="Escribe aquí el cuerpo de la noticia..."></textarea>
                    <span asp-validation-for="TextoContenido" class="text-danger"></span>
                    <small class="form-hint">Texto de máximo 255 caracteres </small>
                </div>

                <!-- FOTO -->
                <div class="form-group">
                    <label asp-for="FotoFichero" class="control-label">Cambiar Imagen de Portada</label>
                    <input asp-for="FotoFichero" class="form-control" type="file" accept="image/*" />
                    <span asp-validation-for="FotoFichero" class="text-danger"></span>
                    <small class="form-hint">Deja en blanco para mantener la foto actual</small>
                </div>

                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}