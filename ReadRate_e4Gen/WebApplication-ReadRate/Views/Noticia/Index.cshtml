@model IEnumerable<WebApplication_ReadRate.Models.NoticiaViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="page-header">
    <h1>Listado de Noticias</h1>
</div>

<div class="container">
    <div class="action-bar">
        <h2 class="section-title">Todas las Noticias</h2>
        <a asp-action="Create" class="btn-create">+ Crear nueva noticia</a>
    </div>

    <div class="news-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="news-card">
                    <div class="book-cover">
                        @if (!string.IsNullOrEmpty(item.Foto))
                        {
                            <img src="@item.Foto" alt="@item.Titulo" class="news-cover" />
                        }
                        else
                        {
                            <div class="news-cover-placeholder">
                                Foto Noticia
                            </div>
                        }
                    </div>

                    <div class="news-info">
                        <div class="news-title">@Html.DisplayFor(modelItem => item.Titulo)</div>

                        <div class="news-meta">
                            <div class="news-meta-item">
                                <strong>Fecha:</strong> @Html.DisplayFor(modelItem => item.FechaPublicacion)
                            </div>

                            <div class="news-preview">
                                @Html.DisplayFor(modelItem => item.TextoContenido)
                            </div>
                        </div>

                        <div class="news-actions">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Borrar</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-news">
                No hay noticias en el listado.
                ¡Añade la primera!
            </div>
        }
    </div>
</div>