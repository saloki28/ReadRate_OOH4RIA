@model WebApplication_ReadRate.Models.NotificacionViewModel

@{
    ViewData["Title"] = "Crear Notificación";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Crear Notificación</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Crear Nueva Notificación</h1>
    </header>

    <main class="container">
        <section class="form-card">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                
                <article class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: Nueva actualización disponible" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                    <small class="form-hint">Título de no más de 200 caracteres</small>
                </article>
                
                <article class="form-group">
                    <label asp-for="Texto" class="control-label"></label>
                    <textarea asp-for="Texto" class="form-control" placeholder="Escribe el contenido de la notificación..."></textarea>
                    <span asp-validation-for="Texto" class="text-danger"></span>
                    <small class="form-hint">Texto de máximo 5000 caracteres</small>
                </article>
                
                <article class="form-group">
                    <label asp-for="Concepto" class="control-label"></label>
                    <select asp-for="Concepto" class="form-control">
                        <option value="">-- Selecciona un concepto --</option>
                        <option value="nueva_reseña">Nueva Reseña</option>
                        <option value="evento_anunciado">Evento Anunciado</option>
                        <option value="noticia_publicada">Noticia Publicada</option>
                        <option value="aviso_club_lectura">Aviso Club de Lectura</option>
                    </select>
                    <span asp-validation-for="Concepto" class="text-danger"></span>
                    <small class="form-hint">Tipo de notificación</small>
                </article>
                
                <article class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Crear notificación" class="btn btn-primary" />
                </article>
            </form>
        </section>
    </main>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
