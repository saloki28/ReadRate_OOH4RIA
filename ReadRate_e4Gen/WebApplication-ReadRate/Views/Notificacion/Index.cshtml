@model IEnumerable<WebApplication_ReadRate.Models.NotificacionViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="page-header">
    <h1>Listado de Notificaciones</h1>
</div>

<div class="container">
    <div class="action-bar">
        <h2 class="section-title">Todas las Notificaciones</h2>
        <a asp-action="Create" class="btn-create">+ Crear nueva notificación</a>
    </div>
    
    <div class="notifications-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="notification-card">
                    <div class="notification-header">
                        <div class="notification-concept">@item.Concepto.Replace("_", " ").ToUpper()</div>
                    </div>
                    <div class="notification-info">
                        <div class="notification-title">@Html.DisplayFor(modelItem => item.Titulo)</div>
                        <div class="notification-text">@Html.DisplayFor(modelItem => item.Texto)</div>
                        <div class="notification-meta">
                            <div class="notification-meta-item">
                                <strong>Fecha:</strong> @Html.DisplayFor(modelItem => item.Fecha)
                            </div>
                        </div>
                        <div class="notification-actions"> 
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action edit">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete">Borrar</a>
                        </div> 
                    </div>
                </div>
            }
        }
        else
        {
            <div class="no-notifications">
                No hay notificaciones en el listado. 
            </div>
        }
    </div>
</div>
