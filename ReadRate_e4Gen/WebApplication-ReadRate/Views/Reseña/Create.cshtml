@model WebApplication_ReadRate.Models.ReseñaViewModel

@{
    ViewData["Title"] = "Create";

    IEnumerable<SelectListItem> librosItem = (IEnumerable<SelectListItem>)ViewData["libItems"];
    IEnumerable<SelectListItem> lectorItem = (IEnumerable<SelectListItem>)ViewData["lecItems"];
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Crear Reseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <header class="page-header">
        <h1>Crear Nueva Reseña</h1>
    </header>

    <main class="container">
        <section class="form-card">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <article class="form-group">
                    <label asp-for="Valoracion" class="control-label"></label>
                    <input asp-for="Valoracion" class="form-control" min="0" max="5" step="0.1" type="number" />
                    <span asp-validation-for="Valoracion" class="text-danger"></span>
                    <small class="form-hint">Valora el libro (número entre 0 y 5)</small>
                </article>

                <article class="form-group">
                    <label asp-for="Opinion" class="control-label"></label>
                    <input asp-for="Opinion" class="form-control" placeholder="Escribe tu opinión aquí..." maxlength="600" />
                    <span asp-validation-for="Opinion" class="text-danger"></span>
                    <small class="form-hint">Da tu opinión sobre el libro (máximo 600 caracteres)</small> 
                </article>

                <article class="form-group">
                    <label asp-for="LibroId" class="control-label"></label>
                    <select class="form-control" asp-for="LibroId" asp-items="librosItem"></select>
                    <span asp-validation-for="LibroId" class="text-danger"></span>
                    <small class="form-hint">Selecciona el libro sobre el que vas a dar tu opinión</small>
                </article>

                <article class="form-group">
                    <label asp-for="LectorId" class="control-label"></label>
                    <select class="form-control" asp-for="LectorId" asp-items="lectorItem"></select>
                    <span asp-validation-for="LectorId" class="text-danger"></span>
                    <small class="form-hint">Selecciona el autor de la reseña</small>
                </article>

                <article class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Crear reseña" class="btn btn-primary" />
                </article>
            </form>
        </section>
    </main>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

