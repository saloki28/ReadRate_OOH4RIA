@model WebApplication_ReadRate.Models.ReseñaViewModel

@{
    ViewData["Title"] = "Detalles de la reseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Detalles de la reseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <div class="page-header">
        <h1>Detalles de reseña</h1>
    </div>

    <main class="container">
        <section class="details-card">
            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.LibroNombre)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.LibroNombre)</div>
            </article>

            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Valoracion)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Valoracion) / 5</div>
            </article>

            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.Opinion)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.Opinion)</div>
            </article>

            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.FechaPublicacion)</div>
                <div class="detail-value">@Model.FechaPublicacion?.ToString("dd/MM/yyyy")</div>
            </article>

            <article class="detail-row">
                <div class="detail-label">@Html.DisplayNameFor(model => model.LectorNombre)</div>
                <div class="detail-value">@Html.DisplayFor(model => model.LectorNombre)</div>
            </article>

            <article class="form-actions">
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar reseña</a>
            </article>
        </section>
    </main>
</body>
</html>

