@model WebApplication_ReadRate.Models.ReseñaViewModel

@{
    ViewData["Title"] = "Editar Reseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Editar Reseña</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/readrate-styles.css" />
    </head>
<body>
    <div class="page-header">
        <h1>Editar Reseña</h1>
    </div>

    <div class="container">
        <div class="form-card">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Valoracion" class="control-label"></label>
                    <input asp-for="Valoracion" class="form-control" type="number" min="0" max="5" step="0.1" />
                    <span asp-validation-for="Valoracion" class="text-danger"></span>
                    <small class="form-hint">Valora el libro (número entre 0 y 5)</small>
                </div>

                <div class="form-group">
                    <label asp-for="Opinion" class="control-label"></label>
                    <input asp-for="Opinion" class="form-control" maxlength="600" />
                    <span asp-validation-for="Opinion" class="text-danger"></span>
                    <small class="form-hint">Da tu opiníon sobre el libro (máximo 600 caracteres)</small>
                </div>


                <div class="form-actions">
                    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
