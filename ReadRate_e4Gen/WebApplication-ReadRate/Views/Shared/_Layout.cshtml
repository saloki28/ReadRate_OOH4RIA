<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication_ReadRate</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication_ReadRate.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span style="font-weight:700; letter-spacing:2px;">  R&R</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa-solid fa-bars" style="color:#ff9800;"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav gap-2">
                        @{
                            var usuarioRol = Context.Session.GetString("UsuarioRol");
                            var usuarioNombre = Context.Session.GetString("UsuarioNombre");
                        }

                        <!-- Menú común para todos -->
                        <li class="nav-item">
                            <a class="nav-link home" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="fa-solid fa-house"></span> HOME
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link libro" asp-area="" asp-controller="Libro" asp-action="Index">
                                <span class="fa-solid fa-book"></span> BUSCAR
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link reseña" asp-area="" asp-controller="Evento" asp-action="Index">
                                <span class="fa-solid fa-star"></span> EVENTOS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link evento" asp-area="" asp-controller="Noticia" asp-action="Index">
                                <span class="fa-solid fa-calendar"></span> NOTICIAS
                            </a>
                        </li>

                        @if (usuarioRol == "visitante" || string.IsNullOrEmpty(usuarioRol))
                        {
                            <!-- Menú para VISITANTE -->
                            <li class="nav-item">
                                <a class="nav-link libro" asp-area="" asp-controller="Club" asp-action="Index">
                                    <span class="fa-solid fa-book"></span> CLUBES
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">
                                    <span class="fa-solid fa-right-to-bracket"></span> Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">
                                    <span class="fa-solid fa-right-to-bracket"></span> Crear cuenta
                                </a>
                            </li>
                        }
                        else if (usuarioRol == "autor")
                        {
                            <!-- Menú para AUTOR -->
                            <li class="nav-item">
                                <a class="nav-link" style="color: #ff9800;" asp-area="" asp-controller="Autor" asp-action="Index">
                                    <span class="fa-solid fa-user"></span> @usuarioNombre
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout">
                                    <span class="fa-solid fa-right-from-bracket"></span> Cerrar Sesión
                                </a>
                            </li>
                        }
                        else if (usuarioRol == "lector")
                        {
                            <!-- Menú para LECTOR -->
                            <li class="nav-item">
                                <a class="nav-link club" asp-area="" asp-controller="Club" asp-action="Index">
                                    <span class="fa-solid fa-users"></span> CLUBES
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link lector"  asp-area="" asp-controller="Lector" asp-action="Index">
                                    <span class="fa-solid fa-user"></span> @usuarioNombre
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout">
                                    <span class="fa-solid fa-right-from-bracket"></span> Cerrar Sesión
                                </a>
                            </li>
                           
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            <span class="footer-main">&copy; 2025 - WebApplication_ReadRate -</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
