@model WebApplication_ReadRate.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Read&Rate - Inicio de Sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Poppins', 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #fff5e6 0%, #ffe8cc 100%);
            min-height: 100vh;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 2rem;
        }
        
        .login-container {
            max-width: 450px;
            width: 100%;
            transform: scale(0.75);
        }
        
        .login-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(255,111,0,0.15);
            padding: 3rem;
            text-align: center;
        }
        
        .logo-section {
            margin-bottom: 2rem;
        }
        
        .logo-icon {
            font-size: 4rem;
            margin-bottom: 0;
        }
        
        .app-title {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: 2px;
            margin-bottom: 0.5rem;
        }
        
        .welcome-message {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
            text-align: left;
        }
        
        .form-group label {
            display: block;
            color: #e65100;
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }
        
        .form-control {
            width: 100%;
            padding: 0.9rem 1.2rem;
            border: 2px solid #ffe0b2;
            border-radius: 12px;
            font-size: 1rem;
            font-family: 'Poppins', sans-serif;
            transition: all 0.3s ease;
        }
        
        .form-control:focus {
            outline: none;
            border-color: #ff9800;
            box-shadow: 0 0 0 3px rgba(255,152,0,0.1);
        }
        
        .text-danger {
            color: #f44336;
            font-size: 0.85rem;
            margin-top: 0.3rem;
            display: block;
        }
        
        .validation-summary {
            background: #ffebee;
            border: 2px solid #f44336;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            color: #c62828;
            font-size: 0.9rem;
        }
        
        .btn {
            width: 100%;
            padding: 0.9rem 2rem;
            border: none;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #ff6f00 0%, #ff9800 100%);
            color: #fff;
            box-shadow: 0 4px 12px rgba(255,111,0,0.3);
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #e65100 0%, #f57c00 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(255,111,0,0.4);
        }
        
        .footer-text {
            color: #999;
            font-size: 0.85rem;
            margin-top: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="logo-section">
                <div class="logo-icon">
                    <img src="~/images/decoracionWeb/logoRR.webp" alt="Logo Read&Rate" style="width: 120px; height: 120px; object-fit: contain;" />
                </div>
                <h1 class="app-title">Read&Rate</h1>
                <p class="welcome-message">¡Bienvenido/a! Por favor, introduce tus credenciales para acceder a la web</p>
            </div>
            
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Introduce tu correo electrónico" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Introduce tu contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </form>
            
            <p class="footer-text">Tu plataforma de lectura y valoración de libros</p>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
